{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/node20/tsconfig",
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
  },
}
